@model RegisterDTO
<section>
    <div class="card w-50 m-auto mt-5">
        <div class="card-header text-center text-white bg-secondary fs-2 fw-2">
            Sign Up
        </div>
        <form asp-action="Register" asp-controller="Account" method="post">
        <div class="card-body">
            <div class="row mb-3">
                <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" id="inputName">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                        <input asp-for="Email" type="email" class="form-control" id="inputEmail3">
                        <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputNumber" class="col-sm-2 col-form-label">Contact</label>
                <div class="col-sm-10">
                    <input asp-for="Contact" type="number" class="form-control" id="inputNumber">
                        <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputRole" class="col-sm-2 col-form-label">Role</label>
                <div class="col-sm-10">
                    <select class="form-select text-center" asp-for="Role">
                        <option selected>---Select Role---</option>
                            <option value=@RoleDetails.Admin_role>@RoleDetails.Admin_role</option>
                            <option value=@RoleDetails.User_role>@RoleDetails.User_role</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                        <input asp-for="Password" type="password" class="form-control" id="inputPassword3">
                        <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" id="sign_in">Sign Up</button>
        <div class="card-footer d-flex justify-content-between">
            <a href="./Login.html" class="text-success">Allready have a account</a>
            <a href="#">Forget Password</a>
        </div>
        </form>
    </div>
   
</section>
